:root {
  --heading-color: #0c1e29;
  --body-text-color: #4e616c;
  --body-bg-color: #FFFFFF;
  --accent: #5978f3;
  --accent-dark: #3451c5;
  --accent-subtle: #d8dfe2;
  --grey-lightest: #efefef;
  --soft-pink: #ff9090;
}
*,*::before,*::after {
  box-sizing: border-box
}
html {
  box-sizing: border-box;
  font-size: 62.5%;
}

body {
  font-family: 'Roboto', sans-serif;
}

.container{
  max-width: 50rem;
  margin: 8rem auto;
  background: var(--body-bg-color);
  color: var(--body-text-color);
  border-radius: 5px;
  box-shadow: 0 15px 35px 0 rgba(42,51,83,.12),0 5px 15px rgba(0,0,0,.06);
}

.row {
  display: block;
  padding: 2rem 2.5rem;
  width: 100%;
}

.header {
  padding: 1rem 2rem;
  border-bottom: 2px solid var(--accent); // darkest-blue

  h1 {
    font-family: 'Nunito', sans-serif;
    color: var(--heading-color);
    font-size: 2.5rem;
  }

  .tagline {
    font-size: 1.4rem;
  }
  .small-tagline {
    font-size: 1.2rem;
    font-family: monospace;
    font-weight: bold;
    letter-spacing: 1px;
  }
}

label {
  cursor: pointer;
}

// Top Input
.input__wrapper {
  max-width: 35rem;
  border-radius: 4px;
  margin-top: 2.5rem;
  transition: all .2s;
  position: relative;

  input {
    transition: all .2s;
    width: 100%;
    padding: 12px 16px;
    border: none;
    background: var(--grey-lightest);
    color: var(--body-text-color);
    font-size: 1.8rem;
    border-radius: 4px;
    outline: none;
    border-bottom: 2px solid transparent;

    &:active,
    &:focus {
      box-shadow: 0 15px 35px 0 rgba(42,51,83,.12),0 5px 15px rgba(0,0,0,.06);
      border-bottom: 2px solid var(--accent);
    }

    &::placeholder {
      color: #ccc;
    }
  }

  button {
    border: none;
    background: none;
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    outline: none;
    cursor: pointer;
    transition: all .2s;

    &::before {
      content: " ";
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      left: -2px;
      height: 75%;
      background: var(--accent-subtle);
      width: 1px;
    }

    &:hover,
    &:focus,
    &:active {
      i {
         color: var(--accent-dark);
      }
    }

    i {
      transition: all .1s;
      color: var(--accent);
    }
  }
}


.todo__items-container {
  .todo__item-wrapper:first-child {
    padding-top: 0;
  }

  .todo__item-wrapper {
    display: flex;
    align-items: center;
    padding: 1.5rem 0;
   // transition: all .2s .2s;

    .checkbox-wrapper {
      display: inline-block;
      margin-right: 1.3rem;
      height: 2.7rem;
    //  transform: scale(1.1);

      .input-checkbox {
        display: none;
      }

      .styled-checkbox {
        border: 1px solid var(--accent-subtle);
        border-radius: 50%;
        display: block;
        height: 20px;
        opacity: 1;
        right: 0;
        top: 4px;
        width: 20px;
        cursor: pointer;
        // transition: border .2s .2s;
        position: relative;
      }

      .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        margin: auto;

        path {
          stroke-dasharray: 19.79 19.79;
          stroke-dashoffset: 19.79;
          stroke: var(--accent);
          opacity: 0;
        }
      }

      .checkmark-active path {
        animation: drawCheckmark 0.2s linear alternate forwards;
      }
    }

    // task text
    .todo__item-task-text {
      transition: all .2s;
      margin-top: 3px;
      font-size: 1.7rem;
      position: relative;
      user-select: none;
      word-break: break-word;

      &::before {

      }
    }

    // remove todo
    .todo__item-remove {
      background: none;
      color: var(--soft-pink);
      border: none;
      outline: none;
      cursor: pointer;
      opacity: 0;
      transition: all .2s;
    }

    &:hover {
      .todo__item-remove {
        opacity: 1;

        &:hover {
          color: darken(#ff9090, 15);
        }
      }
    }
  }

}

.todo__item-wrapper.cross {


  .styled-checkbox {
    animation: cbBorderChange .2s forwards
    border: 1px solid var(--accent) !important;
  }

  .todo__item-task-text {
    opacity: 0.3;
    &::before {
      content: " ";
      position: absolute;
      top: 50%;
      left: 0;
      width: 100%;
      height: 1px;
      background: var(--heading-color);
      animation-name: strikeThrough;
      animation-duration: .2s;
      animation-timing-function: linear;
      animation-iteration-count: 1;
      animation-fill-mode: forwards;
    }
  }
}

@keyframes drawCheckmark {
  0% {
    stroke-dashoffset: 19.79;
    opacity: 1;
  }
  100% {
    stroke-dashoffset: 0;
    opacity: 1;
  }
}

@keyframes strikeThrough{
  0%   { width : 0; }
  100% { width: 100%; }
}

@keyframes cbBorderChange {
  0% {
    border: 1px solid var(--accent-subtle);
  }
  100% {
    border: 1px solid var(--accent);
  }
}